- form_fields do |field|
  %div{:class => 'control-group control-group-'+field[:name].to_s}
    = form.label field[:name], :class => 'control-label' 
    .controls
      - if field[:name].to_s == @row.class.label_field.to_s
        = form.send field[:widget], field[:name], :class => 'input-label'
      - else
        = form.send field[:widget], field[:name]
